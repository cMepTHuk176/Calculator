<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.PascalMain"
             Title="Законы Паскаля">

    <ContentPage.Resources>
        <ResourceDictionary>
            <x:Array x:Name="formulaArray" x:Key="pascal" Type="{x:Type x:String}">
                <x:String>Для твердых тел</x:String>
                <x:String>Для жидкостей и газов</x:String>
                <x:String>Для давления на высоте</x:String>
            </x:Array>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Выберите вариант формулы" FontSize="Large"/>
            <ListView ItemsSource="{StaticResource Key= pascal }" ItemTapped="pascal_ItemTapped"/>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>