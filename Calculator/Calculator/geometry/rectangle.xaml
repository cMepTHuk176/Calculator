<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.geometry.rectangle">
   
    <ContentPage.Resources>
        <ResourceDictionary>
            <x:Array x:Key="options" Type="{x:Type x:String}">
                <x:String>Площадь</x:String>
                <x:String>Диагональ</x:String>
                <x:String>Периметр</x:String>
            </x:Array>
        </ResourceDictionary>
    </ContentPage.Resources>


    <ContentPage.Content>
        <StackLayout>
            <Label Text="Что ищем?" HorizontalOptions="Center"/>
            <ListView x:Name="lView" ItemsSource="{StaticResource Key=options}" HorizontalOptions="Center"
                      ItemTapped="ListView_ItemTapped"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>