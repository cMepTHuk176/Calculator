<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:Calculator"
       x:Class="Calculator.AppShell">

    <Shell.FlyoutHeader>
        <StackLayout>
            <Image HeightRequest="100" Source="xamarin.png" />
            <Label Text="Кулькулятор ver 0.00000001" />
            <Label Text="прототипы функций и методов"/>
        </StackLayout>
    </Shell.FlyoutHeader>
    <FlyoutItem Title="калькулятор" Icon="xamarin.png">
        <ShellContent ContentTemplate="{DataTemplate pages:MainPage}"/>
    </FlyoutItem>
    <FlyoutItem Title="Геометрия" Icon="xamarin.png">
        <ShellContent ContentTemplate="{DataTemplate pages:Geometry_main}"/>
    </FlyoutItem>
    <FlyoutItem Title="Алгебра" Icon="xamarin.png">
        <ShellContent ContentTemplate="{DataTemplate pages:Algebra_main}"/>
    </FlyoutItem>
    <FlyoutItem Title="Физика и метрология" Icon="xamarin.png">
        <ShellContent ContentTemplate="{DataTemplate pages:Physics_main}"/>
    </FlyoutItem>

</Shell>