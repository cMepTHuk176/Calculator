<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.Impulse_Main">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <x:Array x:Key="figure" Type="{x:Type x:String}">
                <x:String>Импульс одиночного тела</x:String>
                <x:String>Сохранение импульса</x:String>
            </x:Array>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <StackLayout>
        <Label Text="Случай нахождения импульса"
                HorizontalOptions="Center" FontSize="Large" />
        <ListView x:Name="figurelist" ItemsSource="{StaticResource Key=figure}" 
                  ItemTapped="figurelist_ItemTapped"/>
    </StackLayout>
</ContentPage>