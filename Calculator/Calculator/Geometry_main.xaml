<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.Geometry_main">
   
    <ContentPage.Resources>
        <ResourceDictionary>
            <x:Array x:Key="geometry" Type="{x:Type x:String}">
                <x:String>Трапеция</x:String>
                <x:String>Окружность</x:String>
                <x:String>Прямоугольник (квадрат)</x:String>
            </x:Array>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Выберите фигуру" HorizontalOptions="Center"/>
            <ListView x:Name="geometryList" ItemsSource="{StaticResource Key=geometry}" 
                      ItemTapped="geometryList_ItemTapped"/>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>