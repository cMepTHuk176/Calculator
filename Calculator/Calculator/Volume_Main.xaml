<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.Volume_Main">
    <ContentPage.Resources>
        <ResourceDictionary>
            <x:Array x:Key="figure" Type="{x:Type x:String}">
                <x:String>объем сферы</x:String>
                <x:String>объем куба</x:String>
                <x:String>объем параллепипеда</x:String>
                <x:String>объем квадратной пирамиды</x:String>
                <x:String>объем треугольной пирамиды</x:String>
                <x:String>объем цилиндра</x:String>
            </x:Array>
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout>
        <Label Text="Выберите фигуру для нахождения объема"
                HorizontalOptions="Center" FontSize="Large" />
        <ListView x:Name="figurelist" ItemsSource="{StaticResource Key=figure}" 
                  ItemSelected="figurelist_ItemSelected"/>
    </StackLayout>
</ContentPage>